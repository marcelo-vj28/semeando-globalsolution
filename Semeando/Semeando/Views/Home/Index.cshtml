@{
    ViewData["Title"] = "Home Page";
}

<!-- Home-->
<div id="home" class="page active">
    <h1>Sistema de gestão SEMEANDO</h1>
    <p>Selecione uma opção no menu lateral para começar</p>
</div>

<!-- Consultas-->
<div id="consulta-usuario" class="page">
    <h1>Consulta de Usuários</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Usuário</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Ranking</th>
                <th>Streak</th>
                <th>Bio</th>
            </tr>
        </thead>
        <tbody id="usuarioData">
            <!-- Dados serão inseridos via JavaScript -->
        </tbody>
    </table>
</div>

<div id="consulta-level" class="page">
    <h1>Consulta de Levels</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Level</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Dificuldade</th>
            </tr>
        </thead>
        <tbody id="levelData">
            <!-- Dados serão inseridos via JavaScript -->
        </tbody>
    </table>
</div>

<div id="consulta-pergunta" class="page">
    <h1>Consulta de Perguntas</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Pergunta</th>
                <th>ID Level</th>
                <th>Texto da Pergunta</th>
                <th>Tipo de Pergunta</th>
            </tr>
        </thead>
        <tbody id="perguntaData">
            <!-- Dados serão inseridos via JavaScript -->
        </tbody>
    </table>
</div>

<div id="consulta-opcao" class="page">
    <h1>Consulta de Opções</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Pergunta</th>
                <th>ID Opção</th>
                <th>Texto da Opção</th>
                <th>Opção Correta</th>
            </tr>
        </thead>
        <tbody id="opcaoData">
            <!-- Dados serão inseridos via JavaScript -->
        </tbody>
    </table>
</div>

<div id="consulta-resposta" class="page">
    <h1>Consulta de Opção Correta</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Resposta</th>
                <th>ID Usuário</th>
                <th>ID Pergunta</th>
                <th>Opção Escolhida</th>
            </tr>
        </thead>
        <tbody id="userData">
            <!-- Dados serão inseridos via JavaScript -->
        </tbody>
    </table>
</div>

<!-- Cadastros-->
<div id="cadastro-usuario" class="page">
    <h1>Cadastro de Usuário</h1>
    <form id="userForm" onsubmit="return false;" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="nome" name="nome" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>

        <div class="mb-3">
            <label for="ranking" class="form-label">Ranking:</label>
            <select class="form-select" id="ranking" name="ranking" required>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="streak" class="form-label">Streak:</label>
            <input type="number" class="form-control" id="streak" name="streak" value="0" min="0">
        </div>

        <div class="mb-3">
            <label for="bio" class="form-label">Bio:</label>
            <textarea class="form-control" id="bio" name="bio" maxlength="255" rows="4"></textarea>
        </div>

        <button type="submit" class="btn btn-primary" onclick="submitForm()">Cadastrar</button>
    </form>
</div>

<div id="cadastro-level" class="page">
    <h1>Cadastro de Level</h1>
    <form id="levelForm" onsubmit="return false;" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="nome" class="form-label">Título:</label>
            <input type="text" class="form-control" id="nome" name="nome" required>
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição:</label>
            <input type="text" class="form-control" id="descricao" name="descricao" required>
        </div>

        <div class="mb-3">
            <label for="dificuldade" class="form-label">Dificuldade:</label>
            <input type="text" class="form-control" id="dificuldade" name="dificuldade" required>
        </div>

        <button type="submit" class="btn btn-primary" onclick="submitForm()">Cadastrar</button>
    </form>
</div>

<div id="cadastro-pergunta" class="page">
    <h1>Cadastro de Pergunta</h1>
    <form id="questionForm" onsubmit="return false;" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="pergunta" class="form-label">Nova pergunta:</label>
            <input type="text" class="form-control" id="pergunta" name="pergunta" required>
        </div>

        <div class="mb-3">
            <label for="tipo-pergunta" class="form-label">Tipo:</label>
            <input type="text" class="form-control" id="tipo-pergunta" name="tipo-pergunta" required>
        </div>

        <button type="submit" class="btn btn-primary" onclick="submitForm()">Cadastrar</button>
    </form>
</div>

<div id="cadastro-opcao" class="page">
    <h1>Cadastro de Opção</h1>
    <form id="optionsForm" onsubmit="return false;" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="opcao" class="form-label">Nova opção:</label>
            <input type="text" class="form-control" id="opcao" name="opcao" required>
        </div>

        <div class="mb-3">
            <label for="opcao-correta" class="form-label">Opção correta:</label>
            <input type="text" class="form-control" id="opcao-correta" name="opcao-correta" required>
        </div>

        <button type="submit" class="btn btn-primary" onclick="submitForm()">Cadastrar</button>
    </form>
</div>

<div id="cadastro-resposta" class="page">
    <h1>Cadastro de Resposta</h1>
    <form id="answersForm" onsubmit="return false;" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="resposta" class="form-label">Opção Escolhida:</label>
            <input type="text" class="form-control" id="resposta" name="resposta" required>
        </div>

        <button type="submit" class="btn btn-primary" onclick="submitForm()">Cadastrar</button>
    </form>
</div>

@section Scripts {
    <script>
        // Inicialização específica da página
        document.addEventListener('DOMContentLoaded', function () {
            populateTable();
        });
    </script>
}