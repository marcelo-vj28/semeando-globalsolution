<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Semeando</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Semeando.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <div class="sidebar">
            <h2>SEMEANDO</h2>
            <div class="menu-item" onclick="showPage('home')">Home</div>
            <div class="menu-item consulta-menu" data-bs-toggle="collapse" data-bs-target="#consultaSubmenu">
                Consulta
                <span class="ms-2">▼</span>
            </div>
            <div class="collapse submenu" id="consultaSubmenu">
                <div class="menu-subitem" onclick="showPage('consulta-usuario')">Usuário</div>
                <div class="menu-subitem" onclick="showPage('consulta-level')">Level</div>
                <div class="menu-subitem" onclick="showPage('consulta-pergunta')">Pergunta</div>
            </div>
            <div class="menu-item cadastro-menu" data-bs-toggle="collapse" data-bs-target="#cadastroSubmenu">
                Cadastro
                <span class="ms-3">▼</span>
            </div>
            <div class="collapse submenu" id="cadastroSubmenu">
                <div class="menu-subitem" onclick="showPage('cadastro-usuario')">Usuário</div>
                <div class="menu-subitem" onclick="showPage('cadastro-level')">Level</div>
                <div class="menu-subitem" onclick="showPage('cadastro-pergunta')">Pergunta</div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2024 - Semeando
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>